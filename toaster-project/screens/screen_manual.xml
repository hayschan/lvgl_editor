<screen>
	<styles>
		<style
			name="style_main_shell"
			bg_color="#color_surface"
			radius="18"
			border_width="0"
			pad_all="12"
			shadow_color="0x707070"
			shadow_opa="71"
			shadow_width="24"
			shadow_offset_y="8"
		/>
		<style
			name="style_sidebar"
			bg_color="#color_sidebar_bg"
			radius="12"
			border_width="0"
			pad_all="6"
			layout="flex"
			flex_flow="column"
			flex_main_place="space_between"
		/>

		<style name="style_nav_button_base" width="56" height="86" radius="11" bg_opa="0" border_width="0" pad_all="0" />
		<style name="style_nav_button_active" bg_opa="100%" bg_color="#color_surface" />

		<style
			name="style_content_card"
			bg_color="#color_surface"
			radius="26"
			border_width="0"
			pad_all="0"
			shadow_color="0x808080"
			shadow_opa="51"
			shadow_width="14"
			shadow_offset_y="4"
		/>
		<style
			name="style_completed_pill"
			width="172"
			height="42"
			radius="21"
			bg_color="#f1f1f1"
			border_width="0"
			shadow_color="0xb0b0b0"
			shadow_opa="77"
			shadow_width="8"
			shadow_offset_y="2"
		/>
		<style
			name="style_progress_card_l"
			width="146"
			height="170"
			radius="34"
			bg_color="#color_gold_dark"
			border_width="0"
			shadow_color="0x8a8a8a"
			shadow_opa="82"
			shadow_width="12"
			shadow_offset_y="5"
		/>
		<style
			name="style_progress_card_r"
			width="146"
			height="170"
			radius="34"
			bg_color="#color_gold_light"
			border_width="0"
			shadow_color="0x8a8a8a"
			shadow_opa="82"
			shadow_width="12"
			shadow_offset_y="5"
		/>
	</styles>

	<view style_bg_color="#color_frame_bg" style_pad_all="10">
		<lv_obj width="100%" height="100%">
			<remove_style_all />
			<style name="style_main_shell" />

			<lv_obj x="0" y="0" width="68" height="100%">
				<remove_style_all />
				<style name="style_sidebar" />

				<lv_button>
					<remove_style_all />
					<style name="style_nav_button_base" />
					<lv_image src="icon_nav_smart" align="top_mid" y="8" />
					<lv_label text="Smart" align="bottom_mid" y="-9" style_text_color="#color_text_muted" />
				</lv_button>

				<lv_button>
					<remove_style_all />
					<style name="style_nav_button_base" />
					<style name="style_nav_button_active" />
					<lv_image src="icon_nav_manual" align="top_mid" y="8" />
					<lv_label text="Manual" align="bottom_mid" y="-9" style_text_color="#color_gold" />
				</lv_button>

				<lv_button>
					<remove_style_all />
					<style name="style_nav_button_base" />
					<lv_image src="icon_nav_settings" align="top_mid" y="8" />
					<lv_label text="Settings" align="bottom_mid" y="-9" style_text_color="#color_text_muted" />
				</lv_button>
			</lv_obj>

			<lv_obj x="82" y="10" width="374" height="278">
				<remove_style_all />
				<style name="style_content_card" />

				<lv_obj x="101" y="12">
					<remove_style_all />
					<style name="style_completed_pill" />
					<lv_label text="Completed" align="center" style_text_color="#color_text_dark" />
				</lv_obj>

				<lv_obj x="39" y="74" width="296" height="182">
					<remove_style_all />
					<style name="style_reset" />

						<lv_obj x="0" y="0">
							<remove_style_all />
							<style name="style_progress_card_l" />
							<lv_image src="icon_badge_heart" align="top_right" x="10" y="-10" />
							<lv_label text="Toasting" align="top_mid" y="62" style_text_color="0xffffff" />
							<lv_label text="100%" align="top_mid" y="85" style_text_color="0xffffff" />
						</lv_obj>

						<lv_obj x="150" y="0">
							<remove_style_all />
							<style name="style_progress_card_r" />
							<lv_image src="icon_badge_heart" align="top_right" x="10" y="-10" />
							<lv_label text="Toasting" align="top_mid" y="62" style_text_color="0xffffff" />
							<lv_label text="100%" align="top_mid" y="85" style_text_color="0xffffff" />
						</lv_obj>
				</lv_obj>
			</lv_obj>
		</lv_obj>
	</view>
</screen>
