<screen permanent="true">
	<styles>
		<style
			name="style_main_shell"
			bg_color="#color_shell_bg"
			radius="14"
			border_width="0"
			pad_all="8"
			shadow_color="0x707070"
			shadow_opa="70"
			shadow_width="16"
			shadow_offset_y="5"
		/>

		<style
			name="style_sidebar"
			bg_color="#color_sidebar_bg"
			radius="10"
			border_width="0"
			pad_all="4"
			layout="flex"
			flex_flow="column"
			flex_main_place="space_between"
		/>

		<style name="style_nav_button_base" width="44" height="66" radius="9" bg_opa="0" border_width="0" pad_all="0" />
		<style name="style_nav_button_active" bg_opa="100" bg_color="#color_surface" />

		<style
			name="style_content_card"
			bg_color="#color_surface"
			radius="18"
			border_width="0"
			pad_all="0"
			shadow_color="0x888888"
			shadow_opa="46"
			shadow_width="9"
			shadow_offset_y="3"
		/>

		<style
			name="style_completed_pill"
			width="112"
			height="28"
			radius="14"
			bg_color="0xf1f1f1"
			border_width="0"
			shadow_color="0xb0b0b0"
			shadow_opa="70"
			shadow_width="5"
			shadow_offset_y="2"
		/>

		<style name="style_progress_stage" bg_color="#color_panel" radius="44" border_width="0" pad_all="0" />

		<style
			name="style_progress_card_l"
			width="74"
			height="98"
			radius="22"
			bg_color="#color_gold_dark"
			border_width="0"
			shadow_color="0x8a8a8a"
			shadow_opa="78"
			shadow_width="8"
			shadow_offset_y="3"
		/>

		<style
			name="style_progress_card_r"
			width="74"
			height="98"
			radius="22"
			bg_color="#color_gold_light"
			border_width="0"
			shadow_color="0x8a8a8a"
			shadow_opa="78"
			shadow_width="8"
			shadow_offset_y="3"
		/>
	</styles>

	<view style_bg_color="#color_frame_bg" style_pad_all="8">
		<lv_obj x="0" y="0" width="304" height="224">
			<remove_style_all />
			<style name="style_main_shell" />

			<lv_obj x="0" y="0" width="52" height="208">
				<remove_style_all />
				<style name="style_sidebar" />

				<lv_button>
					<remove_style_all />
					<style name="style_nav_button_base" />
					<lv_image src="icon_nav_smart" align="top_mid" y="4" zoom="190" />
					<lv_label text="Smart" align="bottom_mid" y="-6" style_text_color="#color_text_muted" />
					<screen_load_event screen="screen_smart" anim_type="none" duration="0" />
				</lv_button>

				<lv_button>
					<remove_style_all />
					<style name="style_nav_button_base" />
					<style name="style_nav_button_active" />
					<lv_image src="icon_nav_manual" align="top_mid" y="4" zoom="190" />
					<lv_label text="Manual" align="bottom_mid" y="-6" style_text_color="#color_gold" />
				</lv_button>

				<lv_button>
					<remove_style_all />
					<style name="style_nav_button_base" />
					<lv_image src="icon_nav_settings" align="top_mid" y="4" zoom="190" />
					<lv_label text="Settings" align="bottom_mid" y="-6" style_text_color="#color_text_muted" />
				</lv_button>
			</lv_obj>

			<lv_obj x="64" y="8" width="232" height="200">
				<remove_style_all />
				<style name="style_content_card" />

				<lv_obj x="60" y="10">
					<remove_style_all />
					<style name="style_completed_pill" />
					<lv_label text="Completed" align="center" style_text_color="#color_text_main" />
				</lv_obj>

				<lv_obj x="12" y="44" width="208" height="146">
					<remove_style_all />
					<style name="style_progress_stage" />

					<lv_obj x="26" y="24">
						<remove_style_all />
						<style name="style_progress_card_l" />
						<lv_image src="icon_badge_heart" align="top_right" x="8" y="-8" zoom="170" />
						<lv_label text="Toasting" align="top_mid" y="38" style_text_color="#color_white" />
						<lv_label text="100%" align="top_mid" y="56" style_text_color="#color_white" />
					</lv_obj>

					<lv_obj x="110" y="24">
						<remove_style_all />
						<style name="style_progress_card_r" />
						<lv_image src="icon_badge_heart" align="top_right" x="8" y="-8" zoom="170" />
						<lv_label text="Toasting" align="top_mid" y="38" style_text_color="#color_white" />
						<lv_label text="100%" align="top_mid" y="56" style_text_color="#color_white" />
					</lv_obj>
				</lv_obj>
			</lv_obj>
		</lv_obj>
	</view>
</screen>
